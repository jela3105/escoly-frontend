<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Index Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="css/administradorResources.css" />
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" />
</head>

<body>
    <input type="checkbox" name="" id="hamburguesa" />
    <div class="barra-lateral">
        <div class="lateral-titulo">
            <h2><span class="lab la-accusoft"></span>Escoly</h2>
        </div>
        <div class="menu-lateral">
            <ul>
                <li>
                    <a href="/admin"><span class="las la-undo"></span><span>Pagina Principal</span></a>
                </li>
                <li>
                    <a href="/admin/profesores" ><span class="las la-school"></span><span>Profesores</span></a>
                </li>
                <li>
                    <a href="/admin/grupos" class="activo"><span class="las la-clone"></span><span>Grupos</span></a>
                </li>
                <li>
                    <a href="/admin/alumnos"><span class="las la-user-graduate"></span><span>Alumnos</span></a>
                </li>
                <li>
                    <a href="/admin/password"><span class="las la-lock"></span><span>Password</span></a>
                </li>
                <li>
                    <a href="/admin/soporte"><span class="las la-universal-access"></span><span>Soporte</span></a>
                </li>
                <li>
                    <a href="/logout"><span class="las la-door-closed"></span><span>Cerrar Sesion</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main">

        <header>
            <h2>
                <label for="hamburguesa">
                    <span class="las la-bars"></span>
                </label>
                Administrador
            </h2>
            <div class="seccion-usuario">
                <img src="../images/administrador.png" width="30px" height="30px" alt="" />
                <div>
                    <h4>Direccion</h4>
                    <small>Administrador</small>
                </div>
            </div>
        </header>

        <main>
            <div class="tarjetas-index">
                <div class="tarjeta-gral-activa">
                    <div>
                        <h1>Nuevo Grupo</h1>
                        <span class="las la-plus-circle"></span><span>Añadir</span>
                    </div>
                    <div>
                        <span class="las la-plus-circle"></span>
                    </div>
                </div>
            </div>
            <% if (typeof errorMessage !=='undefined' ) { %>
                <p style="color:red">
                    <%= errorMessage %>
                </p>
                <% } %>
            <div class="contenido-gral-grid">
                <div class="contenido">
                    <div class="tarjeta-contenido">
                        <div class="tarjeta-contenido-header">
                            <h3>Nuevo Grupo Escolar</h3>
                        </div>
                        <div class="tarjeta-contenido-body">
                            <div class="table-responsive">
                                <form action="/admin/registrarGrupo" method="post" id="registrarGrupoForm">
                                    <table width="100%">
                                        <thead>
                                            <tr>
                                                <td>Grupo Escolar</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    Año:
                                                    <br />
                                                    <input type="number" name="year" id="year"
                                                        placeholder="Año del grupo" class="entradatxt"
                                                        value="<%= formData ? formData.year : '' %>" required />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    Grupo:
                                                    <br />
                                                    <input type="text" name="name" id="name"
                                                        placeholder="Nombre del grupo" class="entradatxt"
                                                        value="<%= formData ? formData.groupp : '' %>" required />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tarjetas-alumnos">
                <a href="/admin/grupos" class="tarjeta-gral">
                    <div>
                        <h1>Regresar</h1>
                        <span class="las la-undo"></span><span>Regresar</span>
                    </div>
                    <div>
                        <span class="las la-undo"></span>
                    </div>
                </a>
                <button onclick="createGroup()" class="tarjeta-gral">
                    <div>
                        <h1>Guardar</h1>
                        <span class="las la-save"></span><span>Guardar grupo</span>
                    </div>
                    <div>
                        <span class="las la-save"></span>
                    </div>
                </button>
            </div>
        </main>
    </div>
    <script>
        window.SERVER_URL = "<%= serverUrl %>";
    </script>
    <script src="js/accionesAdmin.js"></script>
</body>

</html>