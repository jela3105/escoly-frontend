<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Index Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <link rel="stylesheet" type="text/css" media="screen" href="css/administradorResources.css" />
  <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" />
</head>

<body>
  <input type="checkbox" name="" id="hamburguesa" />
  <div class="barra-lateral">
    <div class="lateral-titulo">
      <h2><span class="lab la-accusoft"></span>Escoly</h2>
    </div>
    <div class="menu-lateral">
      <ul>
        <li>
          <a href="/admin"><span class="las la-undo"></span><span>Pagina Principal</span></a>
        </li>
        <li>
          <a href="" class="activo"><span class="las la-school"></span><span>Profesores</span></a>
        </li>
        <li>
          <a href="/admin/grupos"><span class="las la-clone"></span><span>Grupos</span></a>
        </li>
        <li>
          <a href="/admin/alumnos"><span class="las la-user-graduate"></span><span>Alumnos</span></a>
        </li>
        <li>
          <a href="/admin/password"><span class="las la-lock"></span><span>Password</span></a>
        </li>
        <li>
          <a href="/admin/soporte"><span class="las la-universal-access"></span><span>Soporte</span></a>
        </li>
        <li>
          <a href="/logout"><span class="las la-door-closed"></span><span>Cerrar Sesion</span></a>
        </li>
      </ul>
    </div>
  </div>

  <div class="main">
    <header>
      <h2>
        <label for="hamburguesa">
          <span class="las la-bars"></span>
        </label>
        Administrador
      </h2>
      <div class="seccion-usuario">
        <img src="../images/administrador.png" width="30px" height="30px" alt="" />
        <div>
          <h4>Direccion</h4>
          <small>Administrador</small>
        </div>
      </div>
    </header>

    <main>
      <div class="tarjetas-index">
        <a href="/admin/nuevoProfesor" class="tarjeta-gral">
          <div>
            <h1>Nuevo profesor</h1>
            <span class="las la-plus-circle"></span><span>AÃ±adir</span>
          </div>
          <div>
            <span class="las la-plus-circle"></span>
          </div>
        </a>
      </div>
      <div class="contenido-gral-grid">
        <div class="contenido">
          <div class="tarjeta-contenido">
            <div class="tarjeta-contenido-header">
              <h3>Profesores</h3>
              <button>Total: <%= teachers.length %> profesores</button>
            </div>
            <div class="tarjeta-contenido-body">
              <div class="tabile-responsive">
                <table width="100%">
                  <thead>
                    <tr>
                      <td>Apellido Paterno</td>
                      <td>Apellido Materno</td>
                      <td>Nombre</td>
                      <td>Grupo</td>
                      <td>Email</td>
                      <td>Informacion</td>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(const teacher of teachers) { %>
                    <tr>
                      <td><%= teacher.fatherLastName %></td>
                      <td><%= teacher.motherLastName %></td>
                      <td><%= teacher.names %></td>
                      <td><%= teacher.group %></td>
                      <td><%= teacher.email %></td>
                      <td>
                        <a href="/admin/editarProfesor?teacher=<%= teacher.id %>"><button class="consultar">
                            Editar Informacion
                            <span class="las la-question-circle"></span></button></a>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>

</html>