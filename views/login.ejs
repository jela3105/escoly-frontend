<!-- public/login.html -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' type='text/css' media='screen' href='login.css'>

    <title>Index</title>
</head>

<body class="body3">
     <% if (typeof error !== 'undefined') { %>
    <p style="color:red"><%= error %></p>
  <% } %>
    <div class="login-main-container">
        <div class="login-form-side">
            <div class="logo-bg"></div>
            <div class="container" id="container">
                
                <div class="form-container sign-in-container">
                <form id="loginForm" class="Login" method="POST" action="/login">
                        <h1>Inicia Sesión</h1>
                        <div class="social-container">

                        </div>
                        <span>Ingrese sus credenciales</span>
                        <input type="email" id="email" name="email" placeholder="Email" required autofocus/>
                        <input type="password" id="password" name="password" placeholder="Password" required autofocus/>
                        <a href="#" id="btn_token">¿Olvidó su contraseña?</a>
                        <button type="submit">Iniciar Sesion</button>
                    </form>
                </div>
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="overlay-panel overlay-left">
                            <h1>Bienvenido de nuevo!</h1>
                            <p>Para mantenerte conectado con nosotros, por favor inicia sesión con tu información personal</p>
                            <button class="ghost" id="signIn">Iniciar Sesión</button>
                        </div>
                        <div class="overlay-panel overlay-right">
                            <h1>Hola, Bienvenido a Escoly!</h1>
                            <p>Una plataforma confiable para la supervisión continua de la ubicación.</p>

                        </div>
                    </div>
                </div>
            </div>
            <footer>
                <p>
                    Escoly, una plataforma segura.
                </p>
            </footer>
        </div>
    </div>
</body>

</html>