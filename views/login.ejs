<!-- public/login.html -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' type='text/css' media='screen' href='login.css'>

    <title>Index</title>
</head>

<body class="body3">
  <% if (typeof error !== 'undefined') { %>
    <p style="color:red"><%= error %></p>
  <% } %>
    <div class="contenedor">
        <form id="loginForm" class="Login" method="POST" action="/login">
            <p class="titulo">
                Iniciar Sesion
            </p>
            <input type="text" id="email" name="email" placeholder="Correo Electronico" autofocus required>
            <input type="password" id="password" name="password" placeholder="Password" required autofocus>
            <button type="submit">Iniciar Sesion</button>
        </form>
        <div>
            <button onclick="" id="btn_token">¿Olvido su contraseña?</button> 
        </div>
    </div>
</body>

</html>